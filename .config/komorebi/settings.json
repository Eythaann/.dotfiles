{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yml",
  "window_hiding_behaviour": "Minimize",
  "alt_focus_hack": false,
  "default_workspace_padding": 16,
  "default_container_padding": 10,
  "mouse_follows_focus": false,
  "global_work_area_offset": {
    "left": 0,
    "top": 0,
    "right": 0,
    "bottom": 80
  },
  "float_rules": [
    {
      "kind": "Title",
      "id": "(.*[Ii]nstall.*)|(.*[Ss]etup.*)|(.*[Cc]omplete.*)",
      "matching_strategy": "Regex"
    },
    {
      "kind": "Exe",
      "id": "steam.exe"
    },
    {
      "kind": "Exe",
      "id": "steamwebhelper.exe"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "Media",
          "layout": "BSP",
          "workspace_rules": [
            {
              "id": "Spark Desktop.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "Browsers",
          "layout": "BSP",
          "workspace_rules": [
            {
              "id": "firefox.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "Editors",
          "layout": "BSP",
          "workspace_rules": [
            {
              "id": "Code.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "Terminals",
          "layout": "BSP",
          "workspace_rules": [
            {
              "id": "WindowsTerminal.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "Other",
          "layout": "BSP",
          "workspace_rules": [
            {
              "id": "Docker",
              "kind": "Title",
              "matching_strategy": "Contains"
            }
          ]
        },
        {
          "name": "NULL",
          "layout": "BSP"
        }
      ]
    }
  ]
}