{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.dotfiles/komorebi/applications.yml",
  "window_hiding_behaviour": "Minimize",
  "alt_focus_hack": false,
  "default_workspace_padding": 16,
  "default_container_padding": 10,
  "mouse_follows_focus": false,
  "monitors": [
    {
      "workspaces": [
        { "name": "Media", "layout": "BSP" },
        { "name": "Browsers", "layout": "BSP", "workspace_rules": [] },
        { "name": "Editors", "layout": "BSP", "workspace_rules": [{ "id": "Code.exe", "kind": "Exe" }] },
        { "name": "Terminals", "layout": "BSP", "workspace_rules": [{ "id": "WindowsTerminal.exe", "kind": "Exe" }] },
        { "name": "Other", "layout": "BSP" }
      ]
    }
  ]
}
